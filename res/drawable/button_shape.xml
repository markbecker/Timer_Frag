<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disabled -->
    <item android:state_enabled="false"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#AAAAAA" android:startColor="#666666" />

            <stroke android:width="1dp" android:color="#666666" />

            <corners android:radius="6dp" />
        </shape></item>

    <!-- Pressed -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#CCCCCC" android:startColor="#FFFFFF" />

            <stroke android:width="3dp" android:color="#66DD66" />

            <corners android:radius="6dp" />
        </shape></item>

    <!-- Focused -->
    <item android:state_focused="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#CCCCCC" android:startColor="#FFFFFF" />

            <stroke android:width="3dp" android:color="#DD6666" />

            <corners android:radius="6dp" />
        </shape></item>

    <!-- Hovered -->
    <item android:state_hovered="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#CCCCCC" android:startColor="#FFFFFF" />

            <stroke android:width="3dp" android:color="#DD6666" />

            <corners android:radius="6dp" />
        </shape></item>

    <!-- Default -->
    <item><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#CCCCCC" android:startColor="#FFFFFF" />

            <stroke android:width="1dp" android:color="#666666" />

            <corners android:radius="6dp" />
        </shape></item>

</selector>